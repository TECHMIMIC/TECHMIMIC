# Add to .bashrc (in the KDE portion of the video)export POWERLINE_GO_THEME=‘default’
export POWERLINE_GO_THEME=‘default’

function set_prompt() {
    PS1=$(/home/techmimic/go/bin/powerline-go -error $?)
}

PROMPT_COMMAND=set_prompt

# Add to .zshrc (in the XFCE portion of the video)
export POWERLINE_GO_THEME=‘default’
precmd() { PS=1"$(/home/techmimic/go/bin/powerline-go -error $?)” }
